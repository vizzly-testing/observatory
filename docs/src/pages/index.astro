---
import { ViewTransitions } from 'astro:transitions';
import { Header } from '../components/Header.jsx';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Observatory Design System</title>
    <meta name="description" content="A React component library for Vizzly visual testing applications" />
    <ViewTransitions />
  </head>
  <body>
    <Header client:load />

    <main class="relative overflow-hidden">
      <!-- Hero Section -->
      <section class="relative min-h-[80vh] flex items-center">
        <!-- Animated background elements -->
        <div class="absolute inset-0 overflow-hidden">
          <!-- Hexagon grid pattern -->
          <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(\"data:image/svg+xml,%3Csvg width='60' height='52' viewBox='0 0 60 52' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M30 0L60 17.32V43.3L30 52L0 43.3V17.32L30 0z' fill='none' stroke='%23f59e0b' stroke-width='1'/%3E%3C/svg%3E\"); background-size: 60px 52px;" />

          <!-- Radial glow -->
          <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-gradient-radial from-amber-500/10 via-amber-500/5 to-transparent rounded-full blur-3xl" />

          <!-- Floating hexagons -->
          <svg class="absolute top-20 right-20 w-32 h-32 text-amber-500/10 animate-pulse" viewBox="0 0 100 100">
            <path d="M50 5L90 27.5V72.5L50 95L10 72.5V27.5L50 5Z" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
          <svg class="absolute bottom-32 left-16 w-20 h-20 text-amber-500/5" viewBox="0 0 100 100">
            <path d="M50 5L90 27.5V72.5L50 95L10 72.5V27.5L50 5Z" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </div>

        <div class="relative max-w-6xl mx-auto px-6 py-20">
          <div class="flex flex-col lg:flex-row items-center gap-16">
            <!-- Text content -->
            <div class="flex-1 text-center lg:text-left">
              <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-amber-500/10 border border-amber-500/20 rounded-full text-amber-400 text-sm font-medium mb-6">
                <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse" />
                Design System v1.0
              </div>

              <h1 class="text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                <span class="text-white">Build with</span>
                <br />
                <span class="bg-gradient-to-r from-amber-400 via-orange-400 to-amber-500 bg-clip-text text-transparent">
                  Observatory
                </span>
              </h1>

              <p class="text-xl text-slate-400 mb-8 max-w-xl leading-relaxed">
                A comprehensive React component library crafted for Vizzly's visual testing dashboard.
                Dark-themed, accessible, and production-ready.
              </p>

              <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                <a
                  href="/getting-started/introduction"
                  class="group inline-flex items-center justify-center gap-2 px-6 py-3.5 bg-gradient-to-r from-amber-500 to-orange-500 font-semibold rounded-xl hover:from-amber-400 hover:to-orange-400 transition-all shadow-lg shadow-amber-500/25 hover:shadow-amber-500/40 hover:no-underline"
                  style="color: #0f172a;"
                >
                  Get Started
                  <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
                <a
                  href="/components/button"
                  class="inline-flex items-center justify-center gap-2 px-6 py-3.5 border border-slate-700 text-white font-semibold rounded-xl hover:bg-slate-800/50 hover:border-slate-600 transition-all hover:no-underline"
                >
                  Browse Components
                </a>
              </div>

              <!-- Quick stats -->
              <div class="flex items-center gap-8 mt-12 pt-8 border-t border-slate-800/50 justify-center lg:justify-start">
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">30+</div>
                  <div class="text-sm text-slate-500">Components</div>
                </div>
                <div class="w-px h-10 bg-slate-800" />
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">100%</div>
                  <div class="text-sm text-slate-500">Dark Theme</div>
                </div>
                <div class="w-px h-10 bg-slate-800" />
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">A11y</div>
                  <div class="text-sm text-slate-500">Accessible</div>
                </div>
              </div>
            </div>

            <!-- Logo illustration -->
            <div class="flex-shrink-0 relative">
              <div class="relative w-72 h-72 flex items-center justify-center">
                <!-- Outer glow ring -->
                <div class="absolute inset-0 bg-gradient-to-r from-amber-500/20 to-orange-500/20 rounded-full blur-2xl animate-pulse" />

                <!-- Main logo -->
                <svg width="240" height="240" viewBox="0 0 100 100" fill="none" class="relative z-10">
                  <!-- Outer hexagon with gradient stroke -->
                  <defs>
                    <linearGradient id="hexGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" style="stop-color:#f59e0b;stop-opacity:1" />
                      <stop offset="100%" style="stop-color:#ea580c;stop-opacity:1" />
                    </linearGradient>
                  </defs>
                  <path
                    d="M50 5L90 27.5V72.5L50 95L10 72.5V27.5L50 5Z"
                    stroke="url(#hexGradient)"
                    stroke-width="2"
                    fill="none"
                    class="opacity-40"
                  />
                  <!-- Middle hexagon -->
                  <path
                    d="M50 15L80 32.5V67.5L50 85L20 67.5V32.5L50 15Z"
                    stroke="#f59e0b"
                    stroke-width="2"
                    fill="none"
                    class="opacity-60"
                  />
                  <!-- Inner hexagon -->
                  <path
                    d="M50 25L70 37.5V62.5L50 75L30 62.5V37.5L50 25Z"
                    stroke="#f59e0b"
                    stroke-width="2"
                    fill="none"
                  />
                  <!-- Center circle with gradient -->
                  <circle cx="50" cy="50" r="12" fill="url(#hexGradient)" />
                  <!-- Crosshairs -->
                  <line x1="50" y1="8" x2="50" y2="22" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" />
                  <line x1="50" y1="78" x2="50" y2="92" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" />
                  <line x1="12" y1="50" x2="26" y2="50" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" />
                  <line x1="74" y1="50" x2="88" y2="50" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" />
                  <!-- Corner accents -->
                  <circle cx="50" cy="5" r="2" fill="#f59e0b" class="opacity-50" />
                  <circle cx="50" cy="95" r="2" fill="#f59e0b" class="opacity-50" />
                  <circle cx="10" cy="27.5" r="2" fill="#f59e0b" class="opacity-50" />
                  <circle cx="90" cy="27.5" r="2" fill="#f59e0b" class="opacity-50" />
                  <circle cx="10" cy="72.5" r="2" fill="#f59e0b" class="opacity-50" />
                  <circle cx="90" cy="72.5" r="2" fill="#f59e0b" class="opacity-50" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Grid -->
      <section class="relative py-20 border-t border-slate-800/50">
        <div class="max-w-6xl mx-auto px-6">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">Everything You Need</h2>
            <p class="text-slate-400 max-w-2xl mx-auto">
              From atomic components to complex data tables, Observatory provides the building blocks for professional visual testing interfaces.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Feature 1 -->
            <div class="group p-6 bg-slate-900/50 border border-slate-800 rounded-2xl hover:border-amber-500/30 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/5">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-500/20 to-orange-500/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">30+ Components</h3>
              <p class="text-slate-400 text-sm leading-relaxed">Buttons, cards, tables, modals, forms, and everything in between.</p>
            </div>

            <!-- Feature 2 -->
            <div class="group p-6 bg-slate-900/50 border border-slate-800 rounded-2xl hover:border-amber-500/30 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/5">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-500/20 to-orange-500/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">Dark Theme First</h3>
              <p class="text-slate-400 text-sm leading-relaxed">Designed for dark interfaces with carefully tuned contrast ratios.</p>
            </div>

            <!-- Feature 3 -->
            <div class="group p-6 bg-slate-900/50 border border-slate-800 rounded-2xl hover:border-amber-500/30 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/5">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-500/20 to-orange-500/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">Accessible</h3>
              <p class="text-slate-400 text-sm leading-relaxed">Keyboard navigation, ARIA labels, and focus management built in.</p>
            </div>

            <!-- Feature 4 -->
            <div class="group p-6 bg-slate-900/50 border border-slate-800 rounded-2xl hover:border-amber-500/30 transition-all duration-300 hover:shadow-lg hover:shadow-amber-500/5">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-500/20 to-orange-500/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">Well Documented</h3>
              <p class="text-slate-400 text-sm leading-relaxed">Clear guidelines on when and how to use each component.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Component Categories -->
      <section class="relative py-20 border-t border-slate-800/50">
        <div class="max-w-6xl mx-auto px-6">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">Component Categories</h2>
            <p class="text-slate-400">Organized for easy discovery and consistent patterns.</p>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            <a href="/components/button" class="group p-5 bg-slate-900/30 border border-slate-800 rounded-xl hover:border-amber-500/30 hover:bg-slate-800/50 transition-all text-center hover:no-underline">
              <div class="text-2xl mb-2">
                <svg class="w-8 h-8 mx-auto text-slate-500 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />
                </svg>
              </div>
              <div class="text-sm font-medium text-white group-hover:text-amber-400 transition-colors">Actions</div>
              <div class="text-xs text-slate-500 mt-1">Button, Toggle</div>
            </a>

            <a href="/components/input" class="group p-5 bg-slate-900/30 border border-slate-800 rounded-xl hover:border-amber-500/30 hover:bg-slate-800/50 transition-all text-center hover:no-underline">
              <div class="text-2xl mb-2">
                <svg class="w-8 h-8 mx-auto text-slate-500 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </div>
              <div class="text-sm font-medium text-white group-hover:text-amber-400 transition-colors">Forms</div>
              <div class="text-xs text-slate-500 mt-1">Input, Select, Checkbox</div>
            </a>

            <a href="/components/table" class="group p-5 bg-slate-900/30 border border-slate-800 rounded-xl hover:border-amber-500/30 hover:bg-slate-800/50 transition-all text-center hover:no-underline">
              <div class="text-2xl mb-2">
                <svg class="w-8 h-8 mx-auto text-slate-500 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="text-sm font-medium text-white group-hover:text-amber-400 transition-colors">Data</div>
              <div class="text-xs text-slate-500 mt-1">Table, Timeline</div>
            </a>

            <a href="/components/alert" class="group p-5 bg-slate-900/30 border border-slate-800 rounded-xl hover:border-amber-500/30 hover:bg-slate-800/50 transition-all text-center hover:no-underline">
              <div class="text-2xl mb-2">
                <svg class="w-8 h-8 mx-auto text-slate-500 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
              </div>
              <div class="text-sm font-medium text-white group-hover:text-amber-400 transition-colors">Feedback</div>
              <div class="text-xs text-slate-500 mt-1">Alert, Toast, Modal</div>
            </a>

            <a href="/components/card" class="group p-5 bg-slate-900/30 border border-slate-800 rounded-xl hover:border-amber-500/30 hover:bg-slate-800/50 transition-all text-center hover:no-underline">
              <div class="text-2xl mb-2">
                <svg class="w-8 h-8 mx-auto text-slate-500 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
              <div class="text-sm font-medium text-white group-hover:text-amber-400 transition-colors">Layout</div>
              <div class="text-xs text-slate-500 mt-1">Card, Skeleton</div>
            </a>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer class="border-t border-slate-800/50 py-12">
        <div class="max-w-6xl mx-auto px-6 text-center">
          <div class="flex items-center justify-center gap-3 mb-4">
            <svg width="28" height="28" viewBox="0 0 100 100" fill="none">
              <path d="M50 5L90 27.5V72.5L50 95L10 72.5V27.5L50 5Z" stroke="#f59e0b" stroke-width="3" fill="none" opacity="0.6"/>
              <circle cx="50" cy="50" r="10" fill="#f59e0b" />
            </svg>
            <span class="text-slate-400 font-medium">Observatory</span>
          </div>
          <p class="text-slate-600 text-sm">
            Part of Vizzly Visual Testing
          </p>
        </div>
      </footer>
    </main>
  </body>
</html>
